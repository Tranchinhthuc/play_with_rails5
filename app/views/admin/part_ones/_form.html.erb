<%= simple_form_for([:admin, @part_one]) do |f| %>
  <%= render "shared/error_messages", object: @part_one %>

  <div class="field">
    <%= f.label :photo, :class => 'control-label' %>
    <%= f.file_field :photo %>
  </div>

  <div class="field">
    <%= f.label :audio, :class => 'control-label' %>
    <%= f.file_field :audio %>
  </div>

  <% SysConst::PART_1_2_OPTIONS.each do |option, value| %>
    <b><%= option %>: </b><%= f.radio_button :correct_option, value, required: true %> </br>
  <% end %>

  <%= render "admin/shared_form/level_field", f: f %>
  <%= render "admin/shared_form/explanation_field", f: f %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
