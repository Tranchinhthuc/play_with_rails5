<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->

    <div class="user-panel">
      <div class="pull-left image">
        <% if current_user.avatar.url.present? %>
          <%= image_tag(current_user.avatar.in_avatar.url, class: "img-circle") %>
        <% else %>
          <%= image_tag("http://bountytechgaming.com/uploads/avatars/avatar_4202.jpg", class: "img-circle") %>
        <% end -%>
        <!-- <img src="/assets/user2-160x160.jpg" class="img-circle" alt="User Image" /> -->
      </div>
      <div class="pull-left info">
        <p>Hello! <%= current_user.full_name.present? ? current_user.full_name : current_user.email %></p>
      </div>
    </div>

    <!-- search form (Optional) -->
    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search..."/>
        <span class="input-group-btn">
          <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
        </span>
      </div>
    </form>
    <!-- /.search form -->

    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
        <!-- <ul class="nav nav-pills nav-stacked"> -->
          <% SysConst::USER_SIDE_RESOURCES_TOEIC_QUESTION_TYPES.each do |resource| %>
            <li class="<%= controller_name.in?([resource.to_s, resource.to_s.singularize + '_lessons']) ? 'active' : '' %>">
              <%= link_to SysConst::QUESTION_TYPE_TO_STRING_3[resource.to_s.singularize.to_sym],
                Rails.application.routes.url_helpers.send("admin_#{resource.to_s}_path") %>
            </li>
          <% end %>
          <% [:reading, :listening].each do |resource| %>
            <li class="<%= controller_name.in?([resource.to_s, resource.to_s.singularize + '_lessons']) ? 'active' : '' %>">
              <%= link_to SysConst::QUESTION_TYPE_TO_STRING_3[resource.to_s.singularize.to_sym],
                Rails.application.routes.url_helpers.send("admin_#{resource.to_s.singularize}_lessons_path") %>
            </li>
          <% end %>
