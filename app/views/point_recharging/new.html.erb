<%= render "shared/page_title", title: "Nạp point" %>
<%= simple_form_for :point_recharging, url: point_recharging_index_path, method: :post, class: "form-inline" do |f| %>
  <div class="form-group">
    <b>Chọn nhà mạng:</b> <%= f.select(:type_card,
      SysConst::AVAILABLE_TYPE_CARDS.collect {|type_card, value| [value[0], value[1]]},
      selected:(params[:point_recharging][:type_card] if params[:point_recharging].present?))%>
  </div>

  <div class="form-group">
    <%= f.input :pin_card, label: "Mã thẻ nạp", input_html: {required: true,
      value:(params[:point_recharging][:pin_card] if params[:point_recharging].present?)} %>
  </div>

  <div class="form-group">
    <%= f.input :card_serial, label: "Serial", input_html: {required: true,
      value:(params[:point_recharging][:card_serial] if params[:point_recharging].present?)} %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Submit", class: "btn btn-success" %>
  </div>
<% end %>
