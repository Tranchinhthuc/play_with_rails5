<% if !user_signed_in? %>
  <div class="pull-right">
    <%= simple_form_for(User.new, as: :user, url: session_path(:user), html: {class: "form-inline"}) do |f| %>
      <div class="form-group">
        <p>Email:</p>
        <%= f.input :email, required: false, autofocus: true, class: "form-control", label: false %>
      </div>

      <div class="form-group">
        <p>Password:</p>
        <%= f.input :password, required: false, class: "form-control", label: false %>
      </div>
      <div class="form-group">
        <p class="tip-trick">`</p>
        <%= f.button :submit, "Sign in", class: "btn btn-success" %>
        <%= link_to "Sign in with Facebook", omniauth_authorize_path(:user, "facebook"),
          class: "btn btn-primary" %>
      </div>

      <P></P>
      <div class="checkbox form-actions">
        <%= f.input :remember_me, as: :boolean, label: "Remember me?" %>
      </div>
      <div class="form-group">
        <%= link_to "Forgot your password?", new_password_path(:user), style: "text-decoration: underline; color: white;" %>
      </div>
    <% end %>
  </div>
<% else %>
  <div id="user-side-menu">
    <%= link_to "Tests", root_path, class: "btn btn-success menu-link btn-lg menu-btn" %>
    <%#= link_to "Test", examinations_path, class: "btn btn-success menu-link btn-lg" %>
    <%= link_to "Done Tests", answer_sheets_path, class: "btn btn-success menu-link btn-lg menu-btn" %>
    <!-- <div class="dropdown"> -->
      <button class="pull-right btn btn-success dropdown-toggle menu-link btn-lg menu-btn" type="button" data-toggle="dropdown">
        <% if current_user.avatar.url.present? %>
          <%= image_tag(current_user.avatar.in_avatar.url, size: "26x26") %>
        <% else %>
          <%= image_tag("http://bountytechgaming.com/uploads/avatars/avatar_4202.jpg", size: "26x26") %>
        <% end -%>
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu pull-right">
        <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
        <li class="divider"></li>
        <li><%= link_to "Log out", destroy_user_session_path, method: "delete" %></br></li>
      </ul>
    <!-- </div> -->
  </div>
<% end %>
